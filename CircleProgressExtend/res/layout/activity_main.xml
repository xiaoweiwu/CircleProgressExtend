<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 >

    <com.github.circleprogressextend.CircleProgress
        android:id="@+id/circle_progress"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="50dp"
        app:circle_progress="80" />

    <com.github.circleprogressextend.ArcProgress
        android:id="@+id/arc_progress"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/circle_progress"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        app:arc_text_size="100dp"
        app:arc_bottom_text="STORAGE"
        app:arc_inner_bottom_text="1.37GB/12.63GB"
        app:arc_inner_bottom_text_color="#214193"
        app:arc_inner_bottom_text_size="10dp"
         app:arc_bottom_text_size="20dp"
        app:arc_progress="70" />

    <com.github.circleprogressextend.DonutProgress
        android:id="@+id/donut_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/arc_progress"
        android:layout_marginLeft="50dp"
        app:donut_progress="30" />
</RelativeLayout>